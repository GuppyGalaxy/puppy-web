<!-- views/home.handlebars -->
{{#if user}}
  <div class="jumbotron">
    <h1>Welcome to the command line of your browser!</h1>
    <p>Below is your profile information!</p>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Profile Information</h3>
    </div>
    <div class="panel-body">
      <p>Username: {{user.username}}</p>
      <p>Avatar: <img src="{{user.avatar}}"/></p>
    </div>
	<script>
	user = '{{user.username}}'
	</script>
  </div>
  
{{else}}
  <div class="jumbotron">
    <h1>Welcome to the command line of your browser!</h1>
    <p>Sign in to view your profile, and access the live chat!</p>
    <p>
      <a href="/signin" class="btn btn-primary btn-lg" role="button">
        <span class="glyphicon glyphicon-user"></span> 
        Sign in!
      </a>
    </p>
  </div>
  
{{/if}}
